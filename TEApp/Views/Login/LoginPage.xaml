<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TEApp.Views.Login.LoginPage"
             BackgroundImageSource="background_screen.png">
  <!-- ConteÃºdo aqui -->
    <Grid RowDefinitions="2*, auto, auto">
        <VerticalStackLayout Grid.Row="0" Padding="40">
            <VerticalStackLayout>
                <Label
                    TextColor="#1E4D6B"
                    Text="Login"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="40"
                    FontAttributes="Bold"
                    />

                <Image
                    Source="logo.png"
                    Scale="1.2"
                    Opacity="1"/>

            </VerticalStackLayout>
            
            <VerticalStackLayout Grid.Row="0">
                <Label
                    Text="Email"
                    TextColor="Black"
                    Margin="40,0,0,5"/>
                <Entry
                    x:Name="emailEntry"
                    Visual="Default"
                    TextColor="Black"
                    WidthRequest="250"
                    HeightRequest="20"
                    BackgroundColor="AliceBlue"/>
                
                <Label
                    Text="Senha"
                    TextColor="Black"
                    Margin="40,5,0,5"/>
                
                <Entry
                    x:Name="passwordEntry"
                    IsPassword="True"
                    Visual="Default"
                    TextColor="Black"
                    WidthRequest="250"
                    HeightRequest="20"
                    BackgroundColor="AliceBlue"
                    />

                <Button
                    Text="Entrar"
                    TextColor="Black"
                    WidthRequest="120"
                    Margin="0,20,0,0"
                    BackgroundColor="#2A5C5E"
                    BorderWidth="1"
                    BorderColor="black"
                    Clicked="OnLoginClicked"/>

                <Button
                    Text="Cadastrar"
                    TextColor="Black"
                    WidthRequest="120"
                    Margin="0,20,0,0"
                    BackgroundColor="#FFFFFF"
                    BorderWidth="1"
                    BorderColor="black"
                    Clicked="registerRedirect"/>

                <VerticalStackLayout Grid.Row="1" Padding="20">
                    <Label
                        Text="Esqueci Minha Senha"
                        HorizontalOptions="Center"
                        TextColor="black"
                        VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ForgotPasswordRedirect"/>
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>
